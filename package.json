{
  "name": "ember-cli-mirage",
  "version": "3.0.0",
  "private": true,
  "description": "A client-side server to help you build, test and demo your Ember app",
  "homepage": "https://github.com/miragejs/ember-cli-mirage",
  "repository": {
    "type": "git",
    "url": "https://github.com/miragejs/ember-cli-mirage.git"
  },
  "license": "MIT",
  "author": "Sam Selikoff",
  "scripts": {
    "release": "release-it",
    "test": "cd packages/ember-cli-mirage && pnpm run test:ember"
  },
  "overrides": {
    "ember-cli-babel": "8.0.0",
    "colors": "1.4.0",
    "favicons": "5.3.0"
  },
  "devDependencies": {
    "release-it": "^16.2.1",
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "@release-it-plugins/workspaces": "^4.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "after:release": "cd packages/ember-cli-mirage-docs && pnpm run deploy"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it-plugins/workspaces": {
        "publish": false,
        "workspaces": [
          "packages/ember-cli-mirage"
        ]
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "16.20.2",
    "yarn": "1.22.18"
  },
  "changelog": {
    "labels": {
      "breaking": ":boom: Breaking Change",
      "Feature / Enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal"
    }
  }
}
